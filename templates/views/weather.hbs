<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLink}}
</head>

<body>
    {{>navbar}}

    <!-- main header  -->
    <div class="main_header">

        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="container-fluid  main_content">

                    <form class="temp_form ">

                        <input type="text" id="cityName" placeholder="Enter you city name.." autocomplete="off">
                        <br>
                        <input type="submit" value="search" id="submitBtn">
                        <p id="temp_err"></p>
                    </form>

                    <div class="tempInformation  ">
                        <div class="top_layer">
                            <p id="day"></p>
                            <p id="today_date"></p>
                            <p id="today_months"></p>
                        </div>
                        <div class="main_layer ">
                            <p id="city_name">Get output here </p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>



    <script src="js/main.js"></script>
    <script>

        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = 'Sunday';
            weekday[1] = 'Monday';
            weekday[2] = 'Tuesday';
            weekday[3] = 'Wed';
            weekday[4] = 'Thursday';
            weekday[5] = 'Friday';
            weekday[6] = 'Saturday';

            let currentTime = new Date();
            days = weekday[currentTime.getDay()]
            const day = document.getElementById('day');

            day.innerText = days

        }
        getCurrentDay();

        const getCurrentMonth = () => {
            var months = [
                "jan",
                "Fab",
                'Mar',
                'Apr',
                'May',
                'June',
                'July',
                'Aug',
                'Sep',
                'Oct',
                'Nov',
                'Dec'
            ]
            var now = new Date()
            var hours = now.getHours();
            var mins = now.getMinutes()

            var month = months[now.getMonth() + 1]
            var date = now.getDate()

            const today_months = document.getElementById('today_months');
            const today_date = document.getElementById('today_date');
            today_date.innerText = date;
            today_months.innerText = month;
            


        }

        getCurrentMonth();


    </script>
    <!-- footer -->
    {{>footer}}
</body>

</html>